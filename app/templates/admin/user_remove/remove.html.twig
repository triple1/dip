{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card" style="width: 80rem">
            <h5 class="card-header">Удаление пользователя</h5>
            <div class="card-body">
                <h5 class="card-title">Удаление пользователя организации</h5>
                <p class="card-text"><span style="color: red">ВНИМАНИЕ!!! ВСЕ ДАННЫЕ ПОЛЬЗОВАТЕЛИ БУДУТ УДАЛЕНЫ!</span></p>

                <div style="width: 500px">
                    <form method="POST" action="{{ path('admin_user_remove_process') }}">
                        <input type="hidden" name="id_user" value="{{ user.id }}" />

                        <a href="{{ path('admin_users') }}" class="btn btn-info">Отмена</a>
                        <input type="submit" class="btn btn-danger" value="Удалить" />
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
