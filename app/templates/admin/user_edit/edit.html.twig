{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card" style="width: 80rem">
            <h5 class="card-header">Редактирование пользователя</h5>
            <div class="card-body">
                <h5 class="card-title">Редактирование пользователя организации</h5>
                <p class="card-text">Пожалуйста заполните все поля отмеченные '<span style="color: red">*</span>'</p>

                <div style="width: 500px">
                    <form method="POST" action="{{ path('admin_user_edit_process') }}">
                        <input type="hidden" name="id_user" value="{{ user.id }}" />

                        {{ form_widget(form) }}
                        <a href="{{ path('admin_users') }}" class="btn btn-info">Отмена</a>
                        <input type="submit" class="btn btn-primary" value="Сохранить" />
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
